---
interface Props {
  id: string;
  call?: string;
  label: string;
  type?: string;
  klasse?: string;
  value?: any;
  required?: boolean;
  hidden?: boolean;
  maxlength?: string;
  regex?: string;
  preset?: string;
  disabled?: boolean;
  blur?: string;
  submitTo?: string;
  validate: string; // txt, email, tel, handy, plz, call
  min?: string;
  max?: string;
  oc?: string
}

const {call, id, label, klasse, type, required, hidden, maxlength, regex, preset, value, disabled, blur, submitTo, validate, min, max, oc} = Astro.props; 


let errorname = `${id}_errorMsg`;
let KlassenListe = `input-text`;
klasse>""? KlassenListe += ` ${klasse}`: undefined;
let hide = hidden ? ` d-none` : "";
let setClass = `${KlassenListe}${hide}`;
---

<div id=`${id}_label` class={hide}>
  <label for={id}>{label}</label>
  <span class="errormessage" id={errorname}></span>
</div>

<input
  id={id}
  type={type as "text"}
  class= {setClass}
  value={value}
  {required}
  {disabled}
  name={id}
  maxlength={maxlength}
  pattern={regex}
  data-preset = {preset}
  onchange={oc}
  onblur={blur}
  data-vali = {validate}
  data-submit={submitTo} 
  data-call={call}
  min={min}
  max={max}
/>
