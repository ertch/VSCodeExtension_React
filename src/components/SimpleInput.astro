---
interface Props {
  id: string;
  label: string;
  type: string;
  call?: string;
  value?: any;
  required?: boolean;
  maxlength?: string;
  pattern?: string;
  disabled?: boolean;
  blur?: string;
}

const { id, label, type, required, maxlength, pattern, call, value, disabled, blur } =
  Astro.props;
let errorname = id.replace(/^([^_]*)_/, "$1_error_");
---

<div>
  <label for={id}>{label}</label>
  <span class="errormessage" id={errorname}></span>
</div>

<input
  id={id}
  type={type as "text"}
  class="input-text"
  value={value}
  {required}
  {disabled}
  name={id}
  maxlength={maxlength}
  pattern={pattern}
  onchange={call}
  onblur={blur}
/>
