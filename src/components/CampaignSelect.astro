---
// import { isRenderTemplateResult } from 'astro/runtime/server/render/astro/render-template.js';

interface Props {
  id: string;
  title: string;
  name: string;
  required?: boolean;
  call?: string;
}

const { id, title, name, required, call} = Astro.props;

// Unten stehender Part anscheinend nicht notwendig?
// export interface Props {
//   options: Array<string>;
// }

let errorname = id.replace("_produkt_", "_error_produkt_");
---
<div id={name} class="input_form oneColumn"></div>
    <fieldset>
        <legend>{title}</legend>
        <label for={id}>VVL erfolgreich?:</label>
        <span class="errormessage" id={errorname}></span>
        <select class="dropdown h-drop" id={id} name={id} {required} onchange={call}>
            <option value="" selected="selected">[Bitte ausw&auml;hlen]</option>
            <option value="0">Nein, keine VVL</option>
            <option value="1">VVL mit Tarifwechsel und mit Hardware</option>
            <option value="2">VVL ohne Tarifwechsel und mit Hardware</option>
            <option value="3">VVL mit Tarifwechsel</option>
            <option value="4">VVL ohne Tarifwechsel</option>
        </select>
    </fieldset>
</div>