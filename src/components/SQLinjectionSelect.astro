---
interface Props {
  id: string;
  label: string;
  name: string;
  load: String;
  required?: boolean;
  requiredValue?: Array<any>;
  call?: string;
}

const { id, label, name, requiredValue, required, call, load } = Astro.props;
let errorname = `${id}_errorMsg`;
let valueArr;
if (requiredValue != null) {
valueArr = JSON.stringify(requiredValue);
valueArr = valueArr.replace(/&quot;/g, '')
                   .replace(/"/g, '')
                   .replace(/,/g, '.');
}
---

<label for={id}>{label}</label>
<span class="errormessage" id={errorname}></span>
<select class="dropdown h-drop" id={id} name={name} {required} onchange={call} data-injection={load} data-required = {valueArr};>
  <option disabled value="" selected>[Bitte Ausw√§hlen]</option>
</select>
