---
interface Props {
	legend: string;
    id?: string;
    klasse?: string;
    group?: string;
    hidden?: boolean;
}
// Preset
const {legend, hidden, klasse, id, group} = Astro.props;
let setClass = hidden ? `${klasse ? klasse : ''} d-none` : klasse;
---

<fieldset id={id} class={setClass as 'text'} data-grp={group}>
    <legend>{legend}</legend>
    <slot />
</fieldset>